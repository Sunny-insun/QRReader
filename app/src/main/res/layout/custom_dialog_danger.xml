<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="@drawable/dialog_box">
    <RelativeLayout
        android:id="@+id/titleRelativeLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/danger_red">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iconLayout"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_check"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_toRightOf="@+id/iconLayout"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
    <TextView
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="내용을 입력해주세요"/>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/okButton"
            android:text="확인"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_width="150dp"
            android:height="40dp"
            android:backgroundTint="@color/danger_red"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/okButton"
            android:id="@+id/cancelButton"
            android:text="취소"
            android:textColor="@color/black"
            android:height="40dp"
            android:textAlignment="center"
            android:backgroundTint="@color/background_gray"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>